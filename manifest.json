{
    "name": "MAL-Updater",
    "version": "5.0.0",
    "description": "Updates MAL List",
    "manifest_version": 2,
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "bookmarks",
        "*://*.myanimelist.net/*",
        "*://*.github.com/*",
        "webRequest",
        "webRequestBlocking",
        "https://discord.com/channels/@me",
        "contentSettings"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://ackhack.github.io/MAL-Updater/*"
            ],
            "js": [
                "docs/grabCodeAndState.js"
            ]
        },
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "InjectScripts/updater-default.js"
            ]
        },
        {
            "matches": [
                "https://discord.com/channels/@me"
            ],
            "js": [
                "discordRichPresence/discordRichPresenceInject.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        },
        {
            "matches": [
                "https://kaa-play.me/dust/*"
            ],
            "js": [
                "InjectScripts/kaa_pick_server.js"
            ],
            "run_at": "document_idle",
            "all_frames": true
        },
        {
            "matches": [
                "https://kaa-play.me/*",
                "https://gogo-play.tv/*",
                "https://www.mp4upload.com/*",
                "https://mcloud.to/embed/*",
                "https://vidstream.pro/e/*",
                "https://www.dailymotion.com/embed/video/*",
                "https://betaplayer.life/api/embed/*",
                "https://streamani.net/*",
                "https://vidstreamz.online/embed/*"
            ],
            "js": [
                "InjectScripts/playerInject.js"
            ],
            "run_at": "document_idle",
            "all_frames": true
        }
    ],
    "background": {
        "page": "BackgroundScripts/background.html"
    },
    "web_accessible_resources": [
        "Resources/secret.json",
        "Pages/*",
        "BackgroundScripts/*",
        "Popup/cacheviewer.html"
    ],
    "icons": {
        "64": "Resources/icon.png"
    },
    "browser_action": {
        "default_title": "MAL-Updater Settings",
        "default_popup": "Popup/settings.html"
    }
}
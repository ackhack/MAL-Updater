{
    "name": "MAL-Updater",
    "version": "6.5.8",
    "description": "Updates MAL List",
    "manifest_version": 2,
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "bookmarks",
        "*://*.myanimelist.net/*",
        "*://*.github.com/*",
        "webRequest",
        "webRequestBlocking",
        "https://discord.com/channels/@me",
        "contentSettings",
        "http://*/",
        "https://*/"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "InjectScripts/mainInject.js"
            ],
            "all_frames": true
        },
        {
            "matches": [
                "https://discord.com/channels/@me"
            ],
            "js": [
                "InjectScripts/discordRichPresenceInject.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        }
    ],
    "background": {
        "page": "BackgroundScripts/background.html"
    },
    "web_accessible_resources": [
        "Resources/secret.json",
        "Pages/*",
        "BackgroundScripts/*",
        "Popup/cacheviewer.html",
        "Popup/historyviewer.html"
    ],
    "icons": {
        "64": "Resources/icon.png"
    },
    "browser_action": {
        "default_title": "MAL-Updater Settings",
        "default_popup": "Popup/settings.html"
    }
}
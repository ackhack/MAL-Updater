{
    "name": "MAL-Updater",
    "version": "3.5.10",
    "description": "Updates MAL List",
    "manifest_version": 2,
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "bookmarks",
        "*://*.myanimelist.net/*",
        "*://*.github.com/*",
        "webRequest",
        "webRequestBlocking",
        "https://discord.com/channels/@me",
        "contentSettings"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://ackhack.github.io/MAL-Updater/*"
            ],
            "js": [
                "docs/grabCodeAndState.js"
            ]
        },
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "updater-default.js"
            ]
        },
        {
            "matches": [
                "https://discord.com/channels/@me"
            ],
            "js": [
                "discordRichPresence/discordRichPresenceInject.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        }
    ],
    "background": {
        "page": "background.html"
    },
    "web_accessible_resources": [
        "Resources/secret.json",
        "Pages/*"
    ],
    "icons": {
        "64": "Resources/icon.png"
    },
    "browser_action": {
        "default_title": "MAL-Updater Settings",
        "default_popup": "Popup/settings.html"
    }
}
{
    "name": "MAL-Updater",
    "version": "3.1.1",
    "description": "Updates MAL List",
    "manifest_version": 2,
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "*://*.myanimelist.net/*",
        "*://*.github.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://ackhack.github.io/MAL-Updater/*"
            ],
            "js": [
                "docs/grabCodeAndState.js"
            ]
        },
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "updater-default.js"
            ]
        }
    ],
    "background": {
        "scripts": ["httprequester.js"]
    },
    "web_accessible_resources": [
        "Resources/secret.json",
        "Pages/*"
    ],
    "icons": {
        "64": "Resources/icon.png"
    }
}